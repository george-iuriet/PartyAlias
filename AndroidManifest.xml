<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.partyalias"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.partyalias.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.partyalias.StartGame1"
            android:label="@string/title_activity_start_game1"
            android:parentActivityName="com.example.partyalias.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.partyalias.StartActivity" />
        </activity>
        <activity
            android:name="com.example.partyalias.StartGame2"
            android:label="@string/title_activity_start_game2"
            android:parentActivityName="com.example.partyalias.StartGame1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.partyalias.StartGame1" />
        </activity>
        <activity
            android:name="com.example.partyalias.GameBoard"
            android:label="@string/title_activity_game_board" >
        </activity>
        <activity
            android:name="com.example.partyalias.PlayGame"
            android:label="@string/title_activity_play_game" >
        </activity>
        <activity
            android:name="com.example.partyalias.Scores"
            android:label="@string/title_activity_scores" >
        </activity>
        <activity
            android:name="com.example.partyalias.Instructions"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="com.example.partyalias.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.partyalias.StartActivity" />
        </activity>
        
    </application>

</manifest>
